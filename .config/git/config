[alias]
	# List aliases
	alias = "!f() { git config --get-regexp \"^alias\\.\" | " \
		"sed -r -e \"s/^alias\\.([^ ]*)\\s(.*)/alias \\1='\\2'/\"; }; f"
	# Edit last commit message
	amend = commit --amend
	# Set author of repository
	author = "!f() { [ -n \"$1\" ] && [ -n \"$2\" ] && " \
		"git config --local user.name \"$1\" && " \
		"git config --local user.email \"$2\"; }; f"
	# List all branches
	branches = branch -vva
	# List contributors
	contributors = shortlog --email --numbered --summary
	# Allow git git git...
	git = !exec git
	# Log last commit
	last = log -1 --stat HEAD
	# List commits logs
	lo = log --pretty=oneline -n 30 --graph --abbrev-commit
	# Update last commit with staged files without editing the message
	oops = commit --amend --no-edit
	#
	reauthor = commit --amend --no-edit --reset-author
	# Update submodules
	subupdate = submodule update
	# Show diff summary
	summary = diff --compact-summary
	# Short alias for status
	st = status
	# Show local author
	who = "!f() { echo \"$(git config --local user.name)\" " \
		"\"<$(git config --local user.email)>\"; }; f"

[apply]
	# Detect whitespace errors when applying a patch
	whitespace = fix

[core]
	# Avoid to display EOL differences
	autocrlf = input
	# Ensure CRLF modification is safe
	safecrlf = true
	# Make rebase safer on macOS
	trustctime = false
	# Speed up commands involving untracked files such as git status
	untrackedCache = true
	# Default editor
	editor = vim
	# Default pager
	pager = less

[color]
	# Use colors in commands that are capable when tty is a terminal
	ui = auto

[color "branch"]
	# Current branch
	current = green
	# Local branches
	local = yellow
	# Remote branches
	remote = red
	# Upstream branch
	upstream = blue

[color "diff"]
	# Added content
	new = green
	# New moved content
	newMoved = yellow
	# Removed content
	old = red
	# Previous moved content
	oldMoved = blue

[color "status"]
	# Added files
	added = green
	# Modified files
	changed = yellow
	# Untracked files
	untracked = red
	# Current branche
	branch = blue

[diff]
	# Use better, descriptive initials (c, i, w) instead of a/b
	mnemonicPrefix = true
	# Detect copies as well as renames
	renames = copies
	# Show blocks of moved text differently than adds/deletes
	colorMoved = zebra

[diff "bin"]
	# Use hexdump to diff binary files
	textconv = hexdump -v -C

[fetch]
	# Update remote branches as well
	prune = true

[pull]
	# Fast-forward merges only
	ff = only

[push]
	# Push relevant annotated tags when pushing branches out
	followTags = true

[user]
	# Do not guess user identity
	useConfigOnly = true

[url "https://github.com/"]
	# URL shorthands for Github
	insteadOf = github://

[include]
	# Load extra configuration file that is not commited
	# [!] Load after all other settings so it can override previous config
	path = ./config.local
