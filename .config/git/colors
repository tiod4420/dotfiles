# Color settings

[color]
	# Automatically detect if we can use colors
	ui = auto

[color "diff"]
	# Function in hunk header
	func = blue

[color "status"]
	# Files that are changed but not added
	changed = yellow
	# Files with unmerged changes
	unmerged = magenta

[pretty]
	# Almost same as oneline, but with GPG signature
	gpg = "%C(auto)%h %C(bold blue)%G?%C(reset) %C(auto)%(decorate) %s"
